<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.floreantpos.model">
	<class lazy="false" name="com.floreantpos.model.PizzaModifierPrice" table="PIZZA_MODIFIER_PRICE">
		<id column="ID" name="id" type="java.lang.Integer">
			<generator class="identity" />
		</id>

		<many-to-one class="com.floreantpos.model.MenuItemSize" name="size">
			<column name="ITEM_SIZE" />
		</many-to-one>
		
		<property column="PRICE" name="price" type="java.lang.Double" />
		<property column="EXTRA_PRICE" name="extraPrice" type="java.lang.Double" />
		
	</class>
</hibernate-mapping>
